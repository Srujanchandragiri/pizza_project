App.js 
import logo from './logo.svg';
import './App.css';
import bootstrap from '../node_modules/bootstrap/dist/css/bootstrap.min.css'
import Navbarr from './components/Navbarr';
import HomeScreen from './Screens/HomeScreen';

function App() {
  return (
    <div className="App">
     <Navbarr/>
     <HomeScreen/>
    </div>
  );
}

export default App;

